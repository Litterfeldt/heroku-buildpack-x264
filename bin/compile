#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install x264"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="http://download.videolan.org/pub/videolan/x264/binaries/linux-x86_64/x264-r2479-dd79a61"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p bin
curl -L --silent $DOWNLOAD_URL >> bin/x264

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/x264.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:vendor/x264/bin"' >> $PROFILE_PATH
#echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/x264/lib"' >> $PROFILE_PATH
